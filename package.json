{
  "name": "sirocco",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "dist/main/index.js",
  "author": {
    "name": "Justin Wood, Josh Wood"
  },
  "homepage": "",
  "repository": {
    "directory": "/",
    "url": "https://github.com/stiamprie/sirocco"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck": "tsc --noEmit --build",
    "dev": "concurrently \"vite\" \"cross-env DEV= ELECTRON_GTK_VERSION=3 tsc-watch -p tsconfig.electron.json --onSuccess \\\"electron .\\\"\"",
    "build:app": "vite build && tsc -p tsconfig.electron.json",
    "build": "npm run build:app && electron-builder",
    "build:mac": "npm run build:app && electron-builder --mac",
    "build:win": "npm run build:app && electron-builder --win",
    "build:linux": "npm run build:app && electron-builder --linux"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "electron-settings": "^4.0.4",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "react-hook-form": "^7.61.0",
    "react-router-dom": "^7.7.0",
    "sonner": "^2.0.6",
    "tone": "^15.1.22",
    "zod": "^4.0.7"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.1",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.11",
    "tsc-watch": "^7.1.1",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "electron",
      "esbuild"
    ]
  },
  "build": {
    "appId": "com.jw.sirocco",
    "productName": "Sirocco",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": "deb",
      "icon": "resources/icon.ico"
    }
  }
}
